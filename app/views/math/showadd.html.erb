<ht> Additon Calculator</ht>
<form method ='post' action = '/math/add'> 
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<input type='text' name = 'x' />
<input type ='text' name = 'y' />
<input type ='submit' name = 'Add' />
</form>

<% if @sum %>
    <%= @x %> + <%= @y %> = <%= @sum %>
<% end %>